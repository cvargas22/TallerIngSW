{% extends '::base.html.twig' %}

{% block title %} Usuarios {% endblock %}


{% block body %}
<div id="contentwrap">
    <div id="content">
       <form id="form" class="form" method="post" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8">
            <h1>Registrar Usuario</h1>
            <div class="content">
                <div class="intro"></div>
                <h3>Lector creado con éxito. RUN: {{ lector }}</h3>
                <div id="section0" >
                    <div class="field"><label for="RUN">RUN</label><input type="text" id="RUN" name="RUN" maxlength="9" required></div>
                    <div class="field"><label for="Nombre">Nombre</label><input type="text" id="Nombre" name="Nombre" required></div>
                    <div class="field"><label for="Sexo">Sexo</label><select id="Sexo" name="Sexo" required><option value="1">Femenino</option><option value="2">Masculino</option><option value="3">Otro</option></select></div>
                    <div class="field"><label for="FechaNac">Fecha de Nacimiento</label><input type="date" id="FechaNac" name="FechaNac" required></div>
                    <div class="field"><label for="Direccion">Dirección</label><input type="text" id="Direccion" name="Direccion"></div>
                    <div class="field"><label for="Telefono">Telefono</label><input type="number" id="Telefono" name="Telefono" required></div>
                    <div class="field"><div class="edit-options"><div class="edit"></div><div class="delete"></div></div><label for="eMail">e-Mail</label><input type="email" id="eMail" name="eMail"></div><br>
                    <div class="field"><input class="boton" type="submit" id="Registrar" name="Registrar" required value="Registrar"></div>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}