{% extends '::baseLogin.html.twig' %}

{% block title %} Login {% endblock %}

{% block body %}

        {% if error %}
                <div class="error">{{ error.message|trans({},'Usuario o Contraseña incorrectos') }}</div>
        {% endif %}
      <form class="form-signin" action="{{ path('login_check') }}" method="post">
        <h2 class="form-signin-heading">Bienvenido</h2>
        <label for="_username" class="sr-only">Email address</label>
        <input type="text" id="_username" name="_username" class="form-control" placeholder="Usuario" required="" autofocus="">
        <label for="_password" class="sr-only">Password</label>
        <input type="password" id="_password" name="_password" class="form-control" placeholder="Contraseña" required="">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
      </form>

{% endblock %}
	