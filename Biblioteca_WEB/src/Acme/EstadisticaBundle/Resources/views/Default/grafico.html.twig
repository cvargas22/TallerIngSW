{% extends '::baseEstadistica.html.twig' %}

{% block title %} Estadisticas {% endblock %}

{% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/highcharts.js')}}"></script> 
		<script type="text/javascript" src="{{ asset('js/exporting.js')}}"></script> 
		<script type="text/javascript">
		    {{ chart(chart) }}
		</script>
{% endblock %}

{% block body %}
        
<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->


<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
<form id="form" class="form-horizontal" role="form" method="post" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8">
    <h2>Estad√≠stica</h2>

    <div class="form-group">
        <label class="col-sm-1" for="MesI">Desde principios de</label>
        <div class="col-sm-5"><input type="month" id="MesI" name="MesI" class="form-control" step="1" value="2015-12" required></div>
        <span class="help-block">*</span>
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="MesT">Hasta fines de</label>
        <div class="col-sm-5"><input type="month" id="MesT" name="MesT" class="form-control" step="1" value="2015-12" required></div>
        <span class="help-block">*</span>
    </div>

    <span class="help-block">* Este campo es obligatorio</span>

    <div class="form-group">
        <div class="col-xs-5">
            <div class="field"><input class="btn btn-lg btn-primary btn-block" type="submit" id="Listo" name="Listo" required value="Graficar"></div>
        </div>
    </div>
</form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

{% endblock %}