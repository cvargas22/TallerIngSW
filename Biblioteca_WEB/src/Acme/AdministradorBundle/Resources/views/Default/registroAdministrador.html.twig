{% extends '::base.html.twig' %}

{% block title %} Usuarios {% endblock %}

{% block body %}

<form id="form" class="form-horizontal" role="form" method="post" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8">
    <h2>Registrar Administrador</h2>
    <div class="form-group">
        <label class="col-sm-1" for="Nombre">Nombre</label>
        <div class="col-sm-5"><input type="text" id="Nombre" name="Nombre" class="form-control" required></div>        
        <span class="help-block">*</span>
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="Usuario">Usuario</label>
        <div class="col-sm-5"><input type="text" id="Usuario" name="Usuario" class="form-control" required></div>        
        <span class="help-block">*</span>
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="pass">Contraseña</label>
        <div class="col-sm-5"><input type="password" id="pass" name="pass" class="form-control" required></div>
        <span class="help-block">*</span>
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="pass2">Repetir Contraseña</label>
        <div class="col-sm-5"><input type="password" id="pass2" name="pass2" class="form-control" required></div>
        <span class="help-block">*</span>
    </div>

    <span class="help-block">* Este campo es obligatorio</span>

    <div class="form-group">
        <div class="col-xs-5">
            <div class="field"><input class="btn btn-lg btn-primary btn-block" type="submit" id="Listo" name="Listo" required value="Registrar"></div>
        </div>
    </div>
    
</form>
{% endblock %}