{% extends '::base.html.twig' %}

{% block title %} Prestamos {% endblock %}



{% block body %}

<form id="form" class="form-horizontal" role="form" method="post" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8">
    <h2>Nuevo Préstamo</h2>
    <div class="form-group">
        <label class="col-sm-1" for="RUN_p">RUN Usuario</label>
        <div class="col-sm-5"><input type="text" id="RUN_p" name="RUN_p" maxlength="12" class="form-control required rut" required></div>        
        <span class="help-block">*</span>
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="CodLote_p">Código Lote</label>
        <div class="col-sm-5"><input type="text" id="CodLote_p" name="CodLote_p" maxlength="12" class="form-control" required></div>
        <span class="help-block">*</span>
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="Fecha">Fecha</label>
        <div class="col-sm-5"><input type="date" id="CodLote_p" name="Fecha" maxlength="12" class="form-control" value={{ hoy }} required></div>
        <span class="help-block">*</span>
    </div>

    <span class="help-block">* Este campo es obligatorio</span>

    <div class="form-group">
        <div class="col-xs-5">
            <div class="field"><input class="btn btn-lg btn-primary btn-block" type="submit" id="Listo" name="Listo" required value="Prestar"></div>
        </div>
    </div>
    
</form>
{% endblock %}