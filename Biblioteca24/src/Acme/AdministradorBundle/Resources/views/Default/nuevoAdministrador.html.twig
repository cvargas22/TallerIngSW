{% extends '::base.html.twig' %}

{% block title %} Usuarios {% endblock %}

{% block hover %}<div id="hover"></div>{% endblock %}

{% block body %}
<div id="contentwrap">
    <div id="content">
        
        <form id="form" class="form" method="post" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8">
            <h1>Registrar Administrador</h1>
            <div class="content">
                <div class="intro"></div>
                <div id="section0" >
                    <div class="field"><label for="Nombre">Nombre</label><input type="text" id="Nombre" name="Nombre" required><label class="error">*</label></div>
                    <div class="field"><label for="Usuario">Usuario</label><input type="text" id="Usuario" name="Usuario" required><label class="error">*</label></div>
                    <div class="field"><div class="edit-options"><div class="edit"></div><div class="delete"></div></div><label for="pass">Contraseña</label><input type="password" id="pass" name="pass" required><label class="error">*</label></div>
                    <div class="field"><div class="edit-options"><div class="edit"></div><div class="delete"></div></div><label for="pass2">Repetir Contraseña</label><input type="password" id="pass2" name="pass2" required><label class="error">*</label></div>
                    <h5 class="error">* Este campo es obligatorio</h5>
                    <div class="field"><input class="boton" type="submit" id="Registrar" name="Registrar" required value="Registrar"></div>
                </div>
            </div>
        </form>
<div id="popup">
        <div id="close">X</div>
            <h3>Administrador creado con éxito. ID: {{ admin }}</h3>
        </div>
</div>
<script>
$(document).ready(function(){
  
  //chiusura al click sulla parte scura
  $("#hover").click(function(){
        $(this).fadeOut();
    $("#popup").fadeOut();
    });
  
  //chiusura al click sul pulsante
  $("#close").click(function(){
        $("#hover").fadeOut();
    $("#popup").fadeOut();
    });
  
});
</script>
{% endblock %}